<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="9dp"
    android:paddingBottom="9dp"
    android:paddingStart="19dp"
    android:paddingEnd="12dp">

    <TextView
        android:id="@+id/selected_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="0개선택"
        android:textSize="15dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="#364F6B"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/delete_type"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:text="@string/eraser_rectangle"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#364F6B"
            android:background="@drawable/shape_lightblue_outline_white_solid_noround"/>

        <Button
            android:id="@+id/select_all"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:text="@string/select_all"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#364F6B"
            android:background="@drawable/shape_lightblue_outline_white_solid_noround"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/background_orange_lightgray"/>

    </LinearLayout>

</RelativeLayout>