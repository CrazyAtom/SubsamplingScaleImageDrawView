<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.github.crazyatom.imagedrawviewsample.ImageDrawViewActivity">

    <com.github.crazyatom.imagedrawviewsample.ImageDrawViewPager
        android:id="@+id/image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <CheckBox
            android:id="@+id/ink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ink"/>

        <CheckBox
            android:id="@+id/rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rectangle"/>

        <CheckBox
            android:id="@+id/ellipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ellipse"/>

        <CheckBox
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="line"/>

        <CheckBox
            android:id="@+id/cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cloud"/>

        <CheckBox
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"/>

        <CheckBox
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="photo"/>

        <CheckBox
            android:id="@+id/dimension_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="base dimension"/>

        <CheckBox
            android:id="@+id/dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dimension"/>

        <CheckBox
            android:id="@+id/free_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eraser"/>

    </LinearLayout>

</RelativeLayout>

